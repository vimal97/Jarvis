<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/analysis_fragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Expense Wheel :"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="26dp"
                android:textSize="20dp"
                android:textColor="@android:color/white"/>

            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/analysisChart"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Daily Expense Graph :"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="26dp"
                android:textSize="20dp"
                android:textColor="@android:color/white"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/analysisLineChart"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.635"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.958" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Compared to last month"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:layout_marginLeft="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/compare_transport"
                    android:text="Transport"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    />
                <TextView
                    android:id="@+id/compare_transport_value"
                    android:text=""
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/compare_entertainment"
                    android:text="Entertainment"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    />
                <TextView
                    android:id="@+id/compare_entertainment_value"
                    android:text=""
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/compare_stationaries"
                    android:text="Stationaries"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    />
                <TextView
                    android:id="@+id/compare_stationaries_value"
                    android:text=""
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/compare_others"
                    android:text="Others"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    />
                <TextView
                    android:id="@+id/compare_others_value"
                    android:text=""
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>